{
  "name": "odoo-instance-manager",
  "displayName": "Odoo instance manager",
  "author": {
    "name": "AnesCDev"
  },
  "description": "This extension give to the developer a ease way to create and manage Odoo Community Edition Instances for the version 15, 16 and 17",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.81.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "workspaceContains:./__manifest__.py"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "python"
      },
      {
        "id": "javascript"
      }
    ],
    "configuration": {
      "title": "Odoo instance manager"
    },
    "commands": [
      {
        "command": "oim.instance.create",
        "title": "Create odoo instance",
        "icon": "$(add)"
      },
      {
        "command": "oim.instance.refresh",
        "title": "Refresh odoo instances",
        "icon": "$(refresh)"
      },
      {
        "command": "oim.instance.delete",
        "title": "Delete odoo instance",
        "icon": "$(trash)"
      },
      {
        "command": "oim.instance.open",
        "title": "Open in browser",
        "icon": "$(globe)"
      },
      {
        "command": "oim.instance.start",
        "title": "Start odoo instance",
        "icon": "$(debug-start)"
      },
      {
        "command": "oim.instance.stop",
        "title": "Stop odoo instance",
        "icon": "$(debug-stop)"
      },
      {
        "command": "oim.instance.module.openFolder",
        "title": "Open odoo modules folder",
        "icon": "$(folder)"
      },
      {
        "command": "oim.postgresql.statusbar",
        "title": "Manage status of PostgresSQL container",
        "icon": "$(database)"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "odoo-container",
          "title": "Odoo",
          "icon": "resources/svg/tree_view_manifest_data_icon_dark.svg"
        }
      ]
    },
    "views": {
      "odoo-container": [
        {
          "id": "odooInstanceManager",
          "name": "Odoo instance manager",
          "contextualTitle": "Instance manager"
        }
      ]
    },
    "viewsWelcome": [
      {
        "view": "odooInstanceManager",
        "contents": "You has not created any instances.\n[Create instance](command:oim.instance.create)"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "oim.instance.create",
          "when": "view == odooInstanceManager",
          "group": "navigation"
        },
        {
          "command": "oim.instance.refresh",
          "when": "view == odooInstanceManager",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "oim.instance.module.openFolder",
          "when": "view == odooInstanceManager && viewItem =~ /^instanceOdoo_.+$/",
          "group": "inline"
        },
        {
          "command": "oim.instance.start",
          "when": "view == odooInstanceManager && viewItem =~ /^instanceOdoo_.+$/ && viewItem not in oim.startedInstances",
          "group": "inline"
        },
        {
          "command": "oim.instance.stop",
          "when": "view == odooInstanceManager && viewItem =~ /^instanceOdoo_.+$/ && viewItem in oim.startedInstances",
          "group": "inline"
        },
        {
          "command": "oim.instance.open",
          "when": "view == odooInstanceManager && viewItem =~ /^instanceOdoo_.+$/ && viewItem in oim.startedInstances",
          "group": "inline"
        },
        {
          "command": "oim.instance.delete",
          "when": "view == odooInstanceManager && viewItem =~ /^instanceOdoo_.+$/"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "pnpm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "pnpm run compile && pnpm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.81.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@typescript-eslint/eslint-plugin": "^6.4.1",
    "@typescript-eslint/parser": "^6.4.1",
    "eslint": "^8.47.0",
    "glob": "^10.3.3",
    "mocha": "^10.2.0",
    "typescript": "^5.1.6",
    "@vscode/test-electron": "^2.3.4"
  }
}
