{
  "name": "odoo-support-for-vscode",
  "displayName": "Odoo support for VsCode",
  "description": "",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.81.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "workspaceContains:./__manifest__.py"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "python"
      },
      {
        "id": "javascript"
      }
    ],
    "configuration": {
      "title": "Odoo Support for VsCode"
    },
    "commands": [
      {
        "command": "osfv.createOdooInstance",
        "title": "Create odoo instance",
        "icon": "$(add)"
      },
      {
        "command": "osfv.refreshOdooInstances",
        "title": "Refresh odoo instances",
        "icon": "$(refresh)"
      },
      {
        "command": "osfv.addOdooModule",
        "title": "Add odoo module to instance",
        "icon": "$(add)"
      },
      {
        "command": "osfv.deleteOdooInstance",
        "title": "Delete odoo instance",
        "icon": "$(trash)"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "odoo-container",
          "title": "Odoo",
          "icon": "resources/svg/tree_view_manifest_data_icon_dark.svg"
        }
      ]
    },
    "views": {
      "odoo-container": [
        {
          "id": "odooInstanceManager",
          "name": "Odoo instance manager",
          "contextualTitle": "Instance manager"
        },
        {
          "id": "moduleManifest",
          "name": "Module manifest",
          "contextualTitle": "Module manifest"
        }
      ]
    },
    "viewsWelcome": [
      {
        "view": "moduleManifest",
        "contents": "The module manifest can't be detected"
      },
      {
        "view": "odooInstanceManager",
        "contents": "You has not created any instances.\n[Create instance](command:osfv.createOdooInstance)"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "osfv.createOdooInstance",
          "when": "view == odooInstanceManager",
          "group": "navigation"
        },
        {
          "command": "osfv.refreshOdooInstances",
          "when": "view == odooInstanceManager",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "osfv.addOdooModule",
          "when": "view == odooInstanceManager && viewItem == instanceOdoo",
          "group": "inline"
        },
        {
          "command": "osfv.deleteOdooInstance",
          "when": "view == odooInstanceManager && viewItem == instanceOdoo",
          "group": "inline"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "pnpm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "pnpm run compile && pnpm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.81.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@typescript-eslint/eslint-plugin": "^6.4.1",
    "@typescript-eslint/parser": "^6.4.1",
    "eslint": "^8.47.0",
    "glob": "^10.3.3",
    "mocha": "^10.2.0",
    "typescript": "^5.1.6",
    "@vscode/test-electron": "^2.3.4"
  }
}
